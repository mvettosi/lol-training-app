<resources>
    <!-- Base application theme. -->
    <style name="Theme.template" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nord8</item>
        <item name="colorPrimaryVariant">@color/nord7</item>
        <item name="colorOnPrimary">@color/nord0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nord9</item>
        <item name="colorSecondaryVariant">@color/nord10</item>
        <item name="colorOnSecondary">@color/nord6</item>
        <!-- Background -->
        <item name="android:colorBackground">@color/nord6</item>
        <item name="colorOnBackground">@color/nord3</item>
        <!-- Surface -->
        <item name="colorSurface">@color/nord4</item>
        <item name="colorOnSurface">@color/nord1</item>
        <!-- Error-->
        <item name="colorError">@color/nord11</item>
        <item name="colorOnError">@color/nord0</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.template.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.template.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.template.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>